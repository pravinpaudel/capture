<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Dark mode theme matching app icon colors -->
    <style name="Theme.Capture" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <!-- Primary brand color - Lighter blue for dark mode -->
        <item name="colorPrimary">@color/app_primary_light</item>
        <item name="colorPrimaryVariant">@color/app_primary</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/app_accent_light</item>
        <item name="colorSecondaryVariant">@color/app_accent</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Surface and background colors for dark mode -->
        <item name="colorSurface">#1E1E1E</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="android:colorBackground">#121212</item>
        <!-- Status bar color - transparent for fullscreen -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <!-- Material button styles -->
        <item name="materialButtonStyle">@style/Widget.Capture.Button</item>
    </style>
    
    <!-- Theme for EventFormActivity in dark mode -->
    <style name="Theme.Capture.NoFullscreen" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- No fullscreen mode -->
        <item name="android:windowFullscreen">false</item>
        <!-- Primary brand color - Lighter blue for dark mode -->
        <item name="colorPrimary">@color/app_primary_light</item>
        <item name="colorPrimaryVariant">@color/app_primary</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/app_accent_light</item>
        <item name="colorSecondaryVariant">@color/app_accent</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Surface and background colors for dark mode -->
        <item name="colorSurface">#1E1E1E</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="android:colorBackground">#121212</item>
        <!-- Status bar -->
        <item name="android:statusBarColor">#1E1E1E</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <!-- Material button styles -->
        <item name="materialButtonStyle">@style/Widget.Capture.Button</item>
    </style>
    
    <!-- Button style with rounded corners -->
    <style name="Widget.Capture.Button" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">8dp</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>